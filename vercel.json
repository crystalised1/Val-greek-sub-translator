{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/manifest.json", "dest": "/api/manifest.js" },
    { "src": "/subtitles/(.*)", "dest": "/api/subtitles.js" },
    { "src": "/translated/(.*)", "dest": "/api/translated/[id].js" }
  ]
}
